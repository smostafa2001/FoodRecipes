@inject NavigationManager _navigationManager

    <div>
        <div class="display-4 text-center">Welcome to Food Recipe!</div>
        <p>Find your favorite recipe</p>
        <p class="mt-5">
            <input type="text" class="form-control form-control-lg" placeholder="Search for recipe..." @bind:event="oninput" @bind="_searchTerm" @onkeydown="SearchRecipe" />
        </p>
    </div>

    @code {
        private string _searchTerm = string.Empty;

        private void SearchRecipe(KeyboardEventArgs args)
        {
            if (args.Key != "Enter") return;
            _navigationManager.NavigateTo($"/Search/{_searchTerm}");
        }
    }
